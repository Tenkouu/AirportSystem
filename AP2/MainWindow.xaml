<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AP2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AP2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="APsystem">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar"
          Height="36"
          VerticalAlignment="Top">
            <TextBlock Text=" ✈️ AP System - Flight Management"
                   VerticalAlignment="Center"
                   Margin="12,0,0,0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
        </Grid>

        <!-- Main Content under title bar -->
        <NavigationView x:Name="MainNavView"
                    Margin="0,48,0,0"
                    PaneDisplayMode="Left"
                    IsBackButtonVisible="Collapsed"
                    SelectionChanged="MainNavView_SelectionChanged"
                    IsPaneOpen="False"
                    OpenPaneLength="180">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Check-in" Icon="Contact" Tag="CheckInPage"/>
                <NavigationViewItem Content="Flight Status" Tag="FlightStatusPage" >
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE709;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>

</Window>
